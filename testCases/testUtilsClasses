void testUtilsClasses() {

    assert(numberInvalidMessage() == "This is not a valid selection, please select a valid number: ");
    cout << "- numberInvalidMessage function test passed. " << endl;
    cout << endl;

    cout << "- delay function test: " << endl;
    delay();
    cout << endl;

    cout << "- enterToContinue function test: " << endl;
    enterToContinue();
    cout << endl;

    cout << "- clearScreen function test: " << endl;
    delay();
    clearScreen();

    cout << "- reasonMessage function test: " << endl;
    reasonMessage();
    cout << endl;
    cout << endl;

    cout << "- badCountMessage function test value of 1:" << endl;
    badCountMessage(1);
    cout << endl;

    cout << "- badCountMessage function test value of 2:" << endl;
    badCountMessage(2);
    cout << endl;

    assert(numberValidator("3", 1, 5) == 3);
    cout << "- numberValidator function test passed." << endl;
    cout << endl;

    cout << "- indentDescription function test:" << endl;
    string text = "This is a test of the indentDescription function.  This text should be indented 4 spaces and have a width of 80.  The text should wrap around when it reaches 80.";
    indentDescription(text);

}
